@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="/assets/img/logo-1.png">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <!-- bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="/assets/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="/assets/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="/assets/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="/assets/css/responsive.css">
</head>
<body>

    <!-- Include header partial view -->
    <partial name="_HeaderPartial" />

    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <h1>Registration</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card my-5">
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="lottie-container" id="lottie-container" style="width: 300px; height: 300px;"></div>
                        </div>
                        <form asp-action="Register" method="post" id="registerForm">
                            @Html.AntiForgeryToken()

                            <div class="form-group my-2">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" id="Name" placeholder="Enter your name.." asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group my-2">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" placeholder="Enter your email.." asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group my-2">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" id="Password" placeholder="Enter your password.." asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group my-2">
                                <label for="ConfirmPassword">Confirm Password</label>
                                <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm your password.." asp-for="ConfirmPassword" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group my-2 ">
                                <label for="Address">Address</label>
                                <input type="text" class="form-control" id="Address" placeholder="Enter your address.." asp-for="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group my-2 col-lg-8">
                                <label for="Phone">Phone</label>
                                <input type="text" class="form-control" id="Phone" placeholder="Enter your phone.." asp-for="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="form-group my-2 col-lg-6">
                                <label for="City">City</label>
                                <select class="form-select" id="City" asp-for="City">
                                    <option value="">Select a City..</option>
                                    @foreach (var city in Enum.GetValues(typeof(UtilityHelper.EgyptianCities)))
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="row justify-content-center">
                                <button type="submit" id="btn-boxed" class="my-3"> Register <i class="fa fa-check" aria-hidden="true"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include footer partial view -->
    <partial name="_FooterPartial" />

    <!-- Include Scripts partial view -->
    <partial name="_ScriptsPartial" />

    <!--Login Web Module-->
    <script src="~/modules/RegisterWebModule.js"></script>
</body>
</html>