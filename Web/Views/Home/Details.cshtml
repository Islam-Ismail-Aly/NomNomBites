@using Web.ViewModels
@model FoodDetailsVM
@{
    ViewData["Title"] = "Details";
    Layout = "";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="/assets/img/favicon.png">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <!-- bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="/assets/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="/assets/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="/assets/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="/assets/css/responsive.css">
</head>
<body>

    <!-- Include header partial view -->
    <partial name="_HeaderPartial" />

    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>See More Details </p>
                        <h1>Single Product</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- single product -->
    <div class="single-product mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="single-product-img">
                        <img src="@Model.Image" alt="">
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="single-product-content">
                        <h3>@Model.Title</h3>
                        <p class="single-product-pricing">$ @Model.Price</p>
                        <p>@Model.Description</p>
                        <h5>Rating: </h5>
                        @Html.Partial("_StarRatingPartial", Model.Rating)
                        @{
                            var productAvailable = "";
                            if (Model.IsAvailable)
                            {
                                if (Model.FoodInCart == true)
                                {
                                    productAvailable = "<h6 class='product-price' style='color: green;'>Available</h6>";
                                    productAvailable += "<a href='' class='cart-btn' onclick='return false;'>In Your Cart</a>";
                                }
                                else
                                {
                                    productAvailable = "<h6 class='product-price' style='color: green;'>Available</h6>";
                                    productAvailable += $"<a href='' class='cart-btn' onclick='return AddFoodToCart(this,{Model.Id})'><i class='fas fa-shopping-cart'></i> Add to Cart</a>";

                                }
                            }
                            else
                            {
                                productAvailable = "<h6 class='product-price' style='color: red;'>Not Available</h6>";
                            }
                        }
                        @Html.Raw(productAvailable)
                        <br />
                        <br />
                        <input type="button" id="top" onclick="GetTopRatedFoods()" name="GetTopRated" />
                        <h5><span class="orange-text">Category: </span> @Model.CategoryName</h5>
                        <h4>Share:</h4>
                        <ul class="product-share">
                            <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href=""><i class="fab fa-twitter"></i></a></li>
                            <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                            <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end single product -->
    <!-- more products -->
    <div class="more-products mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="section-title">
                        <h3><span class="orange-text">Top Rated</span> Products</h3>
                    </div>
                </div>
            </div>
            <div class="row" id="Foods">
            </div>
        </div>

    </div>
    <!-- end more products -->
    <!-- logo carousel -->
    <br />
    <br />
    <br />
    <div class="logo-carousel-section">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <div class="logo-carousel-inner">
                        <div class="single-logo-item">
                            <img src="/assets/img/company-logos/1.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="/assets/img/company-logos/2.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="/assets/img/company-logos/3.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="/assets/img/company-logos/4.png" alt="">
                        </div>
                        <div class="single-logo-item">
                            <img src="/assets/img/company-logos/5.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end logo carousel -->
    <!-- Include footer partial view -->
    <partial name="_FooterPartial" />
    <partial name="_ScriptsPartial" />

    <!-- Include Scripts partial view -->
    <script>
        function GetTopRatedFoods() {
            var Foods = @Model.Foods; // Ensure this Model object is properly defined and passed to the view
            console.log(Foods);
            var foodRow = document.getElementById("Foods");
            $.ajax({
                url: `/Cart/FoodsInCustomerCart`,
                type: 'GET',
                success: function (FoodsInCart) {
                    foodRow.innerHTML = "";
                    Foods.forEach(function (food) {
                        var productAvailable = ""; // Declare productAvailable here
                        if (food.isAvailable) {
                            if (FoodsInCart.includes(food.id)) {
                                productAvailable = "<h6 class='product-price' style='color: green;'>Available</h6>";
                                productAvailable += "<a href='' class='cart-btn' onclick='return false;'>In Your Cart</a>";
                            } else {
                                productAvailable = "<h6 class='product-price' style='color: green;'>Available</h6>";
                                productAvailable += "<a class='cart-btn' onclick='return AddFoodToCart(this," + food.id + ")'><i class='fas fa-shopping-cart'></i> Add to Cart</a>";
                            }
                        } else {
                            productAvailable = "<h6 class='product-price' style='color: red;'>Not Available</h6>";
                        }
                        // Create productHTML
                        var productHTML = '<div class="col-lg-4 col-md-6 text-center">' +
                            '<div class="single-product-item">' +
                            '<div class="product-image">' +
                            '<a href="/Home/Details/' + food.id + '">' +
                            '<img src="' + food.image + '" alt="' + food.title + '">' +
                            '</a>' +
                            '</div>' +
                            '<h3>' + food.title + '</h3>' +
                            '<p class="product-price">' + food.price + '$</p>' +
                            productAvailable +
                            '</div>' +
                            '</div>';

                        // Append productHTML to foodRow
                        foodRow.innerHTML += productHTML;
                    });
                },
                error: function (error) { }
            });
        }
    </script>

</body>
</html>